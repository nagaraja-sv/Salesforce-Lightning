// to hold some value

// variable
public Account ObjAccount {get;set;}
public boolean show = true;

{!show}
{!ObjAccount.name}
{!ObjAccount.Phone}


// attribute
<aura:attribute name="ObjAccount" type="Account" />
<aura:attribute name="Show" type="boolean" default="false"/>

//Value Provider
{!v.ObjAccount.name}
{!v.ObjAccount.phone}


